@using System.Data.Entity;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - CliniCare360</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css"
          rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <nav class="navbar bg-custom-dark navbar-expand-md">
            <div class="container-fluid">
                <a class="navbar-brand brand-tlt fw-bolder fs-5 text-white" href="@Url.Action("Index", "Home")">
                    <img src="~/Assets/uploads/logo.png" alt="Logo" class="navbar-logo text-color-dark" width="60" height="60" />
                    CliniCare360
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white border-0"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-color-dark align-items-center">
                        <li class="nav-item">
                            <a class="nav-link active text-white" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item d-flex align-items-center text-white">
                            @if (User.IsInRole("admin"))
                            {
                                @Html.ActionLink("Servizi", "Index", "Prestazioni", new { area = "" }, new { @class = "nav-link text-white" })


                            }
                            else if (User.IsInRole("user"))
                            {
                                @Html.ActionLink("Servizi", "Index", "Prestazioni", new { area = "" }, new { @class = "nav-link text-white" })

                            }
                            else
                            {
                                @Html.ActionLink("Servizi", "Index", "Prestazioni", new { area = "" }, new { @class = "nav-link text-white" })
                            }

                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Gestione Appuntamenti", "ListaApp", "Appuntamenti", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Pazienti", "ListaPazienti", "Users", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Clinica", "Index", "Prestazioni", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Medici", "Index", "Prestazioni", new { area = "" }, new { @class = "nav-link text-white" })
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav  align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item dropdown">
                                <a data-mdb-dropdown-init
                                   class="nav-link dropdown-toggle d-flex align-items-center"
                                   href="#"
                                   id="navbarDropdownMenuLink"
                                   role="button"
                                   aria-expanded="false">
                                    <img src="~/Assets/uploads/user.jpg"
                                         class="rounded-circle"
                                         height="22"
                                         style="width:25px"
                                         
                                         alt="Portrait of a Woman"
                                         loading="lazy" />
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    @if (User.IsInRole("user"))
                                    {
                                        <li>
                                            @Html.ActionLink("Profilo", "Profilo", "Users", new { area = "" }, new { @class = "dropdown-item" })
                                        </li>
                                    }

                                        <li>
                                            @Html.ActionLink("Logout", "Logout", "Auth", new { area = "" }, new { @class = "dropdown-item" })
                                        </li>
                                    </ul>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center " href="@Url.Action("Login", "Auth")">
                                    <div class="rounded-circle bg-white">
                                        <img src="~/Assets/uploads/users.png"
                                             height="22"
                                             style="width:25px"
                                             alt="Portrait of a Woman"
                                             loading="lazy" />

                                    </div>

                                </a>
                            </li>
                        }

                    </ul>
                   

                </div>
            </div>
          
        </nav>
        <div class="flex-grow-1">
            @RenderBody()
        </div>
        <footer class="bg-custom-dark text-white">
          
            <div class="container-fluid py-3">
                @if (!User.IsInRole("admin"))
                {
                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-md-4">
                            <h5>CliniCare360</h5>
                            <p>Rivoluziona la tua salute con CliniCare360, dove la cura incontra l'innovazione.</p>
                        </div>
                        <div class="col-md-4">
                            <h5>Link Rapidi</h5>
                            <ul class="list-unstyled">
                                <li><a href="/chi-siamo" class="text-white">Chi Siamo</a></li>
                                <li><a href="/servizi" class="text-white">Servizi</a></li>
                                <li><a href="/contatti" class="text-white">Contatti</a></li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h5>Seguici</h5>
                            <a href="http://www.facebook.com" class="text-white mr-2">
