@model CliniCare360.Models.Users

<div class="container mt-4">
    <div class="profile-header">
        <h2>Profilo di @Model.Nome @Model.Cognome</h2>

        @if (Model.ImgUser != null && Model.ImgUser.Length > 0)
        {
            string imgBase64 = Convert.ToBase64String(Model.ImgUser);
            string imgSrc = String.Format("data:image/jpeg;base64,{0}", imgBase64);
            <img src="@imgSrc" alt="Immagine Profilo" class="img-fluid rounded-circle" width="150">
        }
        else
        {
            <img src="@Url.Content("~/Assets/uploads/profileDefault.jpg")" alt="Immagine Prestazione" class="img-fluid rounded-circle" width="150">
        }
        <p class="mt-3"><strong>Email:</strong> @Model.Email</p>
        <p><strong>Telefono:</strong> @Model.Telefono</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="profile-detail">
                <h4 class="detail-title">Visite Passate</h4>
                @foreach (var visita in (IEnumerable<CliniCare360.Models.Appuntamenti>)ViewData["VisitePassate"])
                {
                    <a href="@Url.Action("DettaglioApp", "Appuntamenti", new { id = visita.AppId })" class="text-decoration-none">
                        <div class="appuntamento-item d-flex justify-content-around align-items-baseline">
                            @if (Model.ImgUser != null && Model.ImgUser.Length > 0)
                            {
                                string imgBase64 = Convert.ToBase64String(visita.Prestazioni.ImgServizio);
                                string imgSrc = String.Format("data:image/jpeg;base64,{0}", imgBase64);
                                <img src="@imgSrc" alt="Immagine Prestazione" class="img-fluid" width="100" height="100" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/Assets/uploads/imgDefault.jpg")" alt="Immagine Prestazione" class="img-fluid" width="100" height="100" />
                            }
                            <div class="ms-3">
                                <div class="appuntamento-date">@visita.Data.ToString("dd/MM/yyyy") @visita.Ora.ToString(@"hh\:mm")</div>
                                <div>@visita.Prestazioni.Descrizione</div>
                            </div>
                        </div>
                    </a>

                }
            </div>
        </div>
       
        <div class="col-md-6">
            <div class="profile-detail">
                <h4 class="detail-title">Prossimi Appuntamenti</h4>
                @foreach (var appuntamento in (IEnumerable<CliniCare360.Models.Appuntamenti>)ViewData["VisiteFuture"])
                {
                    <a href="@Url.Action("DettaglioApp", "Appuntamenti", new { id = appuntamento.AppId })" class="text-decoration-none">
                        <div class="appuntamento-item d-flex justify-content-around align-items-center">
                            @if (Model.ImgUser != null && Model.ImgUser.Length > 0)
                            {
                                string imgBase64 = Convert.ToBase64String(appuntamento.Prestazioni.ImgServizio);
                                string imgSrc = String.Format("data:image/jpeg;base64,{0}", imgBase64);
                                <img src="@imgSrc" alt="Immagine Prestazione" class="img-fluid" width="100" height="100" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/Assets/uploads/imgDefault.jpg")" alt="Immagine Prestazione" class="img-fluid" width="100" height="100" />
                            }
                            <div class="ms-3">
                                <div class="appuntamento-date">@appuntamento.Data.ToString("dd/MM/yyyy") @appuntamento.Ora.ToString(@"hh\:mm")</div>
                                <div>@appuntamento.Prestazioni.Descrizione</div>
                            </div>
                        </div>
                    </a>

                }
            </div>
        </div>
    </div>
</div>
