@model CliniCare360.Models.Prestazioni

@{
    ViewBag.Title = "Create";
}

<section class="vh-100">
    <div class="container mt-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/Assets/uploads/slide2.jpg"
                                 alt="service form" class="img-fluid h-100" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                @using (Html.BeginForm("Create", "Prestazioni", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Aggiungi nuovo servizio</h3>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger d-block" })


                                    <div data-mdb-input-init class="form-outline mb-4">
                                        @Html.TextAreaFor(model => model.Descrizione, new { rows = 5, cols = 50, @class = "form-control form-control-lg" })
                                        @Html.LabelFor(model => model.Descrizione, new { @class = "form-label d-block" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger d-block" })

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control form-control-lg" } })

                                        @Html.LabelFor(model => model.Costo, new { @class = "form-label d-block" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Costo, "", new { @class = "text-danger d-block" })

                                    <div class="mb-4">
                                        @Html.LabelFor(model => model.ImgServizio, new { @class = "form-label " })
                                        @Html.TextBoxFor(model => model.ImgServizio, new { @class = "form-control form-control-lg w-100", type = "file" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ImgServizio, "", new { @class = "text-danger d-block" })

                                    <div class="pt-1 mb-4">
                                        <input type="submit" class="btn btn-custom btn-lg" value="Crea Servizio" />
                                        @Html.ActionLink("Indietro", "Index", null, new { @class = "btn btn-secondary btn-lg" })
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
