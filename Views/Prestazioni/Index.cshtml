@model IEnumerable<CliniCare360.Models.Prestazioni>
@{
    ViewBag.Title = "I nostri servizi";
}

<div class="container-lg mt-4">

    <section class="mb-5">
        <div class="text-center p-4 shadow-sm rounded bg-light">
            <h1 class="display-4">Benvenuti a ClinicaRe360</h1>
            <p class="lead">La vostra salute è la nostra priorità. Scoprite i nostri servizi dedicati a voi.</p>
            <a href="@Url.Action("About", "Home")" class="btn btn-info">Scopri di più su di noi</a>
        </div>
    </section>

    @if (TempData["SuccessMessageCreate"] != null)
    {
        <div class="alert  alert-success  alert-dismissible fade show" role="alert">
            @TempData["SuccessMessageCreate"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessageEdit"] != null)
    {
        <div class="alert  alert-success  alert-dismissible fade show" role="alert">
            @TempData["SuccessMessageEdit"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessageDelete"] != null)
    {
        <div class="alert  alert-success  alert-dismissible fade show" role="alert">
            @TempData["SuccessMessageDelete"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }



    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>I nostri servizi</h2>
        @if (User.IsInRole("admin"))
        {
            <p>
                @Html.ActionLink("Crea Nuovo Servizio", "Create", null, new { @class = "btn btn-primary" })
            </p>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col mb-4">
                <div class="text-decoration-none">
                    <div class="card c-card container img">
                        @if (item.ImgServizio != null && item.ImgServizio.Length > 0)
                        {
                            string imgBase64 = Convert.ToBase64String(item.ImgServizio);
                            string imgSrc = String.Format("data:image/jpeg;base64,{0}", imgBase64);
                            <img src="@imgSrc" alt="Immagine Prestazione" class="card-img w-100 mt-2" />
                        }
                        else
                        {
                            <img src="@Url.Content("~/Assets/uploads/imgDefault.jpg")" alt="Immagine Prestazione" class="card-img w-100 mt-2" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="color: #305570;">@Html.DisplayFor(modelItem => item.Nome)</h5>
                            <p class="card-text text-secondary"> @Html.DisplayFor(modelItem => item.Costo) €</p>
                            <div class="mt-auto d-flex justify-content-between mb-3">
                                @if (User.IsInRole("admin"))
                                {
                                    <a class="nav-item" href="@Url.Action("Edit", "Prestazioni", new { id = item.PrestazioneId })">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square text-color-light" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                        </svg>
                                    </a>
                                    <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@item.PrestazioneId" data-nome="@item.Nome">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                        </svg>
                                    </button>


                                    <a href="@Url.Action("Details", "Prestazioni", new { id = item.PrestazioneId })" class="btn btn-custom rounded-pill">Dettaglio</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("AppDispByPrest", "Appuntamenti", new { id = item.PrestazioneId })" class="btn btn-custom rounded-pill">Prenota</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Conferma Eliminazione</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Sei sicuro di voler eliminare la prestazione "<span id="nomePrestazione"></span>"?
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "Prestazioni", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="prestazioneId" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-danger">Elimina</button>
                }
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function () {
        const updateMaxHeight = (selector) => {
            let maxHeight = 0;
            const elements = document.querySelectorAll(selector);

            elements.forEach(element => {
                element.style.height = 'auto';
            });

            elements.forEach(element => {
                if (element.offsetHeight > maxHeight) {
                    maxHeight = element.offsetHeight;
                }
            });

            elements.forEach(element => {
                element.style.height = maxHeight + 'px';
            });
        };

        updateMaxHeight('.c-card');
    };
    document.addEventListener('DOMContentLoaded', function () {
        var exampleModal = document.getElementById('exampleModal');
        exampleModal.addEventListener('show.bs.modal', function (event) {

            var button = event.relatedTarget;


            var id = button.getAttribute('data-id');
            var nome = button.getAttribute('data-nome');


            var nomePrestazioneElement = exampleModal.querySelector('#nomePrestazione');
            var prestazioneIdElement = exampleModal.querySelector('#prestazioneId');

            nomePrestazioneElement.textContent = nome;
            prestazioneIdElement.value = id;
        });
    });

</script>





