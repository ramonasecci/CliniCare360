@model CliniCare360.Models.Posts

<section class="vh-100">
    <div class="container mt-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                           
                            <img src="~/Assets/uploads/editPost.jpg"
                                 alt="login form" class="img-fluid h-100" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                @using (Html.BeginForm("EditPost", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "postForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.PostId) 
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-pen me-3" viewBox="0 0 16 16">
                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                        </svg>
                                        <span class="h1 fw-bold mb-0">Modifica Post</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Aggiorna i contenuti dei post</h5>

                                   
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        @Html.EditorFor(model => model.Titolo, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.LabelFor(model => model.Titolo, new { @class = "form-label" })
                                    </div>

                                  
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        @Html.TextAreaFor(model => model.Contenuto, new { rows = 5, cols = 50, @class = "form-control form-control-lg" })
                                        @Html.LabelFor(model => model.Contenuto, new { @class = "form-label d-block" })
                                    </div>

                                  
                                    <div class="mb-4">
                                        @Html.RadioButtonFor(model => model.Tipo, "promozione", new { @class = "form-check-input", id = "inlineRadio1" })
                                        <label class="form-check-label me-3" for="inlineRadio1">Promo</label>

                                        @Html.RadioButtonFor(model => model.Tipo, "info", new { @class = "form-check-input", id = "inlineRadio2" })
                                        <label class="form-check-label" for="inlineRadio2">Info</label>
                                    </div>

                                 
                                    <div class="mb-4">
                                        @Html.LabelFor(model => model.ImgPost, new { @class = "form-label" })
                                        @Html.TextBoxFor(model => model.ImgPost, new { @class = "form-control form-control-lg w-100", type = "file" })
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-custom btn-lg me-2" type="submit">Aggiorna</button>
                                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary custom-back-btn btn-lg">Indietro</a>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
