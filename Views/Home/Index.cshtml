    </div>


    <div class="container-md mt-3">
        <div class="row justify-content-center">
            @if (ViewBag.PostInfo != null)
            {
                foreach (var post in ViewBag.PostInfo)
                {
                    <div class="col-sm-7 mx-5 my-5">
                        <div class="card h-100 d-flex flex-column justify-content-between border-0 ">
                            @if (post.ImgPost != null && post.ImgPost.Length > 0)
                            {
                                string imgBase64 = Convert.ToBase64String(post.ImgPost);
                                string imgSrc = String.Format("data:image/jpeg;base64,{0}", imgBase64);
                                <img src="@imgSrc" alt="@post.Titolo" class="card-img-top rounded-0" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/Assets/uploads/slide3.jpg")" alt="@post.Titolo" class="card-img-top rounded-0" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">@post.Titolo</h5>
                                <p class="card-text">@post.Contenuto</p>
                            </div>
                            <div class="card-footer bg-transparent">

                                @if (User.IsInRole("admin"))
                                {
                                    <div class="d-flex justify-content-around">
                                        <a href="@Url.Action("EditPost", "Home", new { id = post.PostId })" class=" nav-item btn btn-outline-secondary border-0">Modifica</a>
                                        <a class="nav-item">@Html.ActionLink("Elimina", "Index", "Prestazioni", new { area = "" }, new { @class = "btn btn-outline-secondary border-0" })</a>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex justify-content-end">
                                        <a class="nav-item">@Html.ActionLink("I nostri servizi", "Index", "Prestazioni", new { area = "" }, new { @class = "btn text-color-dark  border-0" })</a>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>

                }
            }
        </div>
    </div>


</main>

<script>
    window.onload = function () {
        const updateMaxHeight = (selector) => {
            let maxHeight = 0;
            const cards = document.querySelectorAll(selector);
            cards.forEach(card => {
                if (card.offsetHeight > maxHeight) {
                    maxHeight = card.offsetHeight;
                }
            });
            cards.forEach(card => {
                card.style.height = maxHeight + 'px';
            });
        };

        updateMaxHeight('.info-card-height');
        updateMaxHeight('.promo-card-height');
    };
</script>